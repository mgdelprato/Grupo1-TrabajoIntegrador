                <img src="/images/Fondos/Fondo3.PNG" height="200px" width="200px">
                <img src="/images/Fondos/Fondo4.PNG" height="200px" width="200px">
                <img src="/images/Fondos/Fondo5.PNG" height="200px" width="200px">
            </div>

            <div>
               <%- include('../partials/footer')%>
            </div>
            
                
        </div>
