<body>
    <div id='Contenedor'>  
        
        <%- include('../partials/header',{busqueda:productoBuscado})%>
        
        
        <div id='Hero_IMG' class='juntitos2'>                
            <img src="/images/Fondos/Fondo4.PNG" height="40%" width="100%">

        </div>
        
            <video id='Video_Home' autoplay="true" loop="true" id="header-video" class="header-video" muted>
                <source src="/images/Video_Banner.webm" type="video/mp4">
            </video>

            <p id='Text_Hero'>Â¡Encuentra tu Goodbike!</p>
            
           
          

            <div id='juntitos2' class='juntitos'>
