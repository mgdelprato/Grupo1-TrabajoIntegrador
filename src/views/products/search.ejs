                <p id='Ofertas_text' class="Resaltado">Productos para tu busqueda: <%=productoBuscado%></p>            
            </div>

            <main>
                
                <% for(let i=0; i < resultados.length; i++){ %>
                <section id=<%= resultados[i].id %>>
                    <figure ><a href="/products/productDetail/<%=resultados[i].id %>"><img src="/images/products/<%= resultados[i].img_ppal%>"alt="Principal1"></a></figure>
                    <div>
                        <p><%= resultados[i].title %></p>
                        <span class="price"><%= resultados[i].price %></span>

                        <form action="/products/productCartAdd" method="POST" id="form1"></form>
                        <button type="submit" name="id_producto" form="form1" value='<%= resultados[i].id %>'>Agregar</button>
                        



                    </div>       
                </section>
                <% } %> 
            </main>

 
            <div id='juntitos2' class='juntitos2'>                
